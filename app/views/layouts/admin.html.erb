<!DOCTYPE html>
<html>
  <head>
    <title>Contained | <%= @page_title || "Admin" %></title>
    <%= stylesheet_link_tag('admin') %>
    <%= javascript_include_tag('admin') %>
    <%= cloudinary_js_config %>
    <script type="text/javascript">
$(function()
{
  $('#content').redactor();
});
</script>
  </head>
  <body>
    <div id="header">
      <h1>Titanic CMS</h1>
    </div>
    <div id="main">
      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; Titanic Media</p>
    </div>
  </body>
</html>
