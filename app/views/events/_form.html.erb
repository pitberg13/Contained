<%= error_messages_for(@event) %>

<table summary="Event form fields">
    <tr>
      <th>Title</th>
      <td><%= f.text_field(:title) %></td>
    </tr>
    <tr>
      <th>Permalink</th>
      <td><%= f.text_field(:permalink) %></td>
    </tr>
    <tr>
      <th>Event Date and Time</th>
      <td><%= f.datetime_select(:event_datetime, :order => [:day, :month, :year]) %></td>
    </tr>
    <tr>
      <th>Ticket Price</th>
      <td><%= f.number_field(:ticket_price, :step => 0.1) %></td>
    </tr>
    <tr>
    <th>Venue</th>
      <td><%= f.select(:venue_id, @venues.collect {|v| [v.venue_name, v.id]}) %></td>
    </tr>
    <tr>
      <th>Category</th>
      <td><%= f.select(:category_id, @categories.collect {|c| [c.category_title, c.id]}) %></td>
    </tr>
    <tr>
      <th>Image</th>
      <td><%= f.file_field(:image) %></td>
    </tr>
    <tr>
      <th>Visible</th>
      <td><%= f.check_box(:visible) %></td>
    </tr>
    <tr>
      <th>Featured</th>
      <td><%= f.check_box(:featured) %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= f.select(:position, 1..@event_count) %></td>
    </tr>
  </table>
  <div summary="event content area">
      <h2>Content</h2>
      <%= tinymce_assets %>
  </div>
    <%= tinymce %>
    </br>
  <%= f.text_area :content, class: "tinymce" %>
