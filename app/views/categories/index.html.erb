<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="categories index">
  <h2>Categories</h2>

  <%= link_to("Add New Category", {:action => 'new'}, :class => 'action new') %>

  <div><%= pluralize(@categories.size, 'categories') %> found</div>

  <table class="listing" summary="Categories list">
    <tr class="header">
      <th>Category title</th>
    </tr>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.category_title %></td>
      <td class="actions">
        <%= link_to("Edit", {:action => 'edit', :id => category.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => category.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
