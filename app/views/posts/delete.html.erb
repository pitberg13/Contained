<% @page_title = "Delete Post" %>

<%= link_to("<< Back to List", {:action => 'index', :post_id => @post.id}, :class => 'back-link') %>

<div class="post delete">
  <h2>Delete Post</h2>

  <%= form_for(:section, :url => {:action => 'destroy', :id => @post.id}) do |f| %>

    <p>Are you sure you want to permanently delete this post?</p>

    <p class="reference-name"><%= @post.title %></p>

    <div class="form-buttons">
      <%= submit_tag "Delete Post", :onclick => "return confirm('You sure you want to bin this?')" %>
    </div>

  <% end %>
</div>
