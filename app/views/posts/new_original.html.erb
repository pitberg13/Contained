<% @page_title = "New Post" %>

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="posts new">
  <h2>Create Post</h2>

  <%= semantic_form_for(:post, :url => {:action => 'create'}) do |f| %>

    <%= render(:partial => "form", :locals => {:f => f}) %>

    <div class="form-buttons">
      <%= submit_tag("Create Post") %>
    </div>

  <% end %>
</div>
